{
    "configurations": [
        {
            "name": "Debug Mocha Tests",
            "type": "node",
            "request": "attach",
            "port": 9578,
            "protocol": "inspector",
            "timeout": 30000,
            "smartStep": false,
            "sourceMaps": true,
            "skipFiles": [
                // "<node_internals>/*",
                "<node_internals>/*.js",
                "node_modules/core-js/**",
                "node_modules/tsconfig-paths/**",
                "node_modules/q/**",
                "node_modules/object.assign/**",
                "**hbenl.vscode-mocha-test-adapter-**/node_modules",
                "node_modules/bluebird/**"
            ]
        }
    ]
}
